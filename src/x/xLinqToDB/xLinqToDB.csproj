<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup Label="Application">
    <TargetFramework>netstandard2.0</TargetFramework>
    <Product>LinqToDB Extensions</Product>
    <VersionPart1>5</VersionPart1>
    <VersionPart2>4</VersionPart2>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
  </PropertyGroup>
  <ItemGroup Label="PackageReferences">
    <PackageReference Include="linq2db" />
  </ItemGroup>
  <ItemGroup Label="ProjectReferences">
    <ProjectReference Include="..\..\Common\.Data\Common.Data.csproj" />
  </ItemGroup>
  <PropertyGroup Condition="'$(TargetFramework)' == 'netstandard2.1' OR '$(TargetFramework)' == 'netcoreapp3.1' OR '$(TargetFramework)' == 'net6.0' OR '$(TargetFramework)' == 'net8.0'">
    <DefineConstants>NETSTANDARD2_1PLUS;$(DefineConstants)</DefineConstants>
  </PropertyGroup>

</Project>