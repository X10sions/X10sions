<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup Label="Application">
    <TargetFramework>netstandard2.0</TargetFramework>
    <Product>IQToolkit Data MySql Extensions</Product>
    <VersionPart1>1</VersionPart1>
    <VersionPart2>0</VersionPart2>
  </PropertyGroup>
  <ItemGroup Label="PackageReferences">
    <PackageReference Include="MySqlConnector" Version="0.59.2" Alias="MySqlConnector" />
    <PackageReference Include="MySql.Data" Version="8.0.17" Alias="MySqlData" />
  </ItemGroup>
  <ItemGroup Label="ProjectReferences">
    <ProjectReference Include="..\.Ado\xIQToolkit.Data.Ado.csproj" />
    <!-- 
    <ProjectReference Include="$(RepoSrcDir_X10sions)x\xIQToolkit\.Data\.Ado\xIQToolkit.Data.Ado.csproj" />
    -->
  </ItemGroup>
  <Target Name="AddPackageAliases" BeforeTargets="ResolveReferences" Outputs="%(PackageReference.Identity)">
    <PropertyGroup>
      <AliasPackageReference>@(PackageReference-&gt;'%(Identity)')</AliasPackageReference>
      <AliasName>@(PackageReference-&gt;'%(Alias)')</AliasName>
    </PropertyGroup>
    <ItemGroup>
      <ReferencePath Condition="'%(FileName)'=='$(AliasPackageReference)'">
        <Aliases>$(AliasName)</Aliases>
      </ReferencePath>
    </ItemGroup>
  </Target>
</Project>