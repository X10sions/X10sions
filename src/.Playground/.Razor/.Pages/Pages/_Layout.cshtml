@using Microsoft.AspNetCore.Components.Web
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@inject X10sions.Playground.Razor.AppSettings appSettings
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <base href="~/" />
  <link rel="stylesheet" href="@(appSettings.AppContentPath)css/bootstrap/bootstrap.min.css" />
  <link rel="stylesheet" href="@(appSettings.AppContentPath)css/site.css" />
  <link rel="stylesheet" href="SharedRazor.BlazorServer.styles.css" />
  <component type="typeof(HeadOutlet)" render-mode="ServerPrerendered" />
</head>
<body>
  @RenderBody()
  <div id="blazor-error-ui">
    <environment include="Staging,Production">
      An error has occurred. This application may no longer respond until reloaded.
    </environment>
    <environment include="Development">
      An unhandled exception has occurred. See browser dev tools for details.
    </environment>
    <a href="" class="reload">Reload</a>
    <a class="dismiss">🗙</a>
  </div>
  <h1>@appSettings.AppTitle</h1>
  <script src="_framework/blazor.server.js"></script>
</body>
</html>
