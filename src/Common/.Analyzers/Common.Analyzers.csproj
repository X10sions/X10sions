<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <IsPackable>false</IsPackable>
    <SatelliteResourceLanguages>en</SatelliteResourceLanguages>
    <EnableNETAnalyzers>true</EnableNETAnalyzers>
    <AnalysisLevel>latest</AnalysisLevel>
  </PropertyGroup>
  <ItemGroup Label="PackageReferences">
    <PackageReference Include="IDisposableAnalyzers"  ExcludeAssets="compile" />
    <PackageReference Include="Meziantou.Analyzer"  ExcludeAssets="compile" />
    <PackageReference Include="Microsoft.VisualStudio.Threading.Analyzers" ExcludeAssets="compile" />
    <PackageReference Include="Roslynator.Analyzers"  ExcludeAssets="compile" />
    <PackageReference Include="Roslynator.CodeAnalysis.Analyzers"  ExcludeAssets="compile" />
    <PackageReference Include="Roslynator.Formatting.Analyzers"   ExcludeAssets="compile" />
    <PackageReference Include="SecurityCodeScan.VS2019"  ExcludeAssets="compile" />
    <PackageReference Include="SharpSource"  ExcludeAssets="compile" />
    <PackageReference Include="SonarAnalyzer.CSharp"   ExcludeAssets="compile" />
  </ItemGroup>
</Project>