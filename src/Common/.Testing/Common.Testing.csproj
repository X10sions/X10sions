<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <IsPackable>false</IsPackable>
  </PropertyGroup>
  <ItemGroup Label="PackageReferences">
    <PackageReference Include="AutoBogus.NSubstitute"  />
    <PackageReference Include="coverlet.collector"   ExcludeAssets="compile" />
    <PackageReference Include="FluentAssertions"  />
    <PackageReference Include="FluentAssertions.Analyzers"  ExcludeAssets="compile" />
    <PackageReference Include="Meziantou.FluentAssertionsAnalyzers"  ExcludeAssets="compile" />
    <PackageReference Include="Microsoft.NET.Test.Sdk"   />
    <PackageReference Include="Microsoft.Playwright"  />
    <PackageReference Include="NetArchTest.Rules"  />
    <PackageReference Include="NSubstitute.Analyzers.CSharp"   ExcludeAssets="compile" />
    <PackageReference Include="Reqnroll"  />
    <PackageReference Include="System.Text.RegularExpressions"   />
    <!--

    * Unit Testing:
      * Frameworks:
        * Must: xUnit
        * Other: NUnit
        * Avoid: MsTest

      * Mocking:
        * Must NSubstitute > Moq > FakeItEasy

      * Assertions:
        * Must: FluentAssertions
        * Other: Shouldly

      * TestData:
        * Must: Bogus > AutoFixture

    * Integration Testing:
      * WebApplicatinFactory
        * TestContainers
        * Respawn

    * Snapshot Testing:
      * Good: Verify

    * E2E Testing (End to End):
      * Good: Playwright

    * Performance Testing:
      * Must: K6
      * Other:NBomber


    <ExcludeAssets>compile</ExcludeAssets>

    <PrivateAssets>all</PrivateAssets>
    <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>

    -->
  </ItemGroup>
  <ItemGroup>
    <ProjectReference Include="..\.Analyzers\Common.Analyzers.csproj" />
  </ItemGroup>
</Project>